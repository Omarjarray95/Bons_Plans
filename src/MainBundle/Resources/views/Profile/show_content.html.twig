{% trans_default_domain 'FOSUserBundle' %}

<link href="{{ asset('bundles/main/BackEnd/css/style.css')}}" rel="stylesheet">
<link href="{{ asset('bundles/main/BackEnd/css/bootstrap.min.css')}}" rel="stylesheet">
<link href="{{ asset('bundles/main/BackEnd/assets/font-awesome/css/font-awesome.css')}}" rel="stylesheet" />

<style>
    .BAC
    {
        width: 100%;
    }
</style>
<style>
    #ABCD
    {
        text-align: left;
        font-style: normal;
        padding: 10px;
        background: rgba(80,86,82,0.65);
        font-size: 16px;
        font-weight: 500;
    }
</style>

<section id="reservation" class="reservation_section bg-grey">
    <div class="container col-sm-offset-0 col-lg-6">
<section class="wrapper">
        <!-- page start-->
        <div class="row">
            <aside class="profile-info col-lg-12">
                    <button type="button" class="default_btn"><a href="javascript:history.go(0)" style="color:#ffffff"><i class="fa fa-user"></i> Page </a></button>
                    <button class="default_btn"><a href="#" style="color:#ffffff "><i class="fa fa-thumb-tack"></i> Favoris </a></button>
                <section class="panel">
                    <div class="panel-body bio-graph-info">
                        <div class="row">
                            <div class="bio-row BAC">
                                <p><span><strong><i class="fa fa-user"></i> Pseudo</strong></span>: {{ user.username }}</p>
                            </div>
                            <div class="bio-row BAC">
                                <p><span><strong><i class="fa fa-envelope"></i> E-Mail</strong></span>: {{ user.email }}</p>
                            </div>
                            <div class="bio-row BAC">
                                <p><span><strong><i class="fa fa-credit-card"></i> Nom & Prénom</strong></span>: {{ user.nom }}</p>
                            </div>
                            <div class="bio-row BAC">
                                <p><span><strong><i class="fa fa-female"></i><i class="fa fa-male"></i> Sexe</strong></span>: {{ user.sexe }}</p>
                            </div>
                            <div class="bio-row BAC">
                                <p><span><strong><i class="fa fa-calendar"></i> Date De Naissance</strong></span>: {{ user.datedenaissance | date('y-m-d') }}</p>
                            </div>
                            <div class="bio-row BAC">
                                <p><span><strong><i class="fa fa-map-marker"></i> Ville</strong></span>: {{ user.ville }}</p>
                            </div>
                            <div class="bio-row BAC">
                                <p><span><strong><i class="fa fa-phone"></i> Numéro</strong></span>: {{ user.phone }}</p>
                            </div>
                            <div class="bio-row BAC">
                                <p><span><strong><i class="fa fa-globe"></i> Site Web/Blog</strong></span>:<a href="{{ user.url }}">{{ user.url }}</a></p>
                            </div>
                        </div>
                    </div>
                </section>
                <div class="bio-graph-heading" id="ABCD">
                    <p><span><strong>Intro : </strong></span>{{ user.intro }}</p>
                </div>
            </aside>

            </div>

        <!-- page end-->
    </section>
</section>
    </div>
</section>

