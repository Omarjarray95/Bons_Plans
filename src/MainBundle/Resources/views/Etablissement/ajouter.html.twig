{% extends 'Base.html.twig' %}

{% block AjouterEtablissement %}
    <section class="reservation_section bg-dark">
        <div class="container padding">
        <div class="col-sm-10 col-sm-offset-1 align-left">
            <div class="reserv_form">
            {{ form_start(e, {'id':'Ajouter_Form'}) }}
            <table>
                <tr>
                    <td>
                        {{ form_label(e.nom) }}
                    </td>
                    <td>
                        {{ form_errors(e.nom) }}
                        {{ form_widget(e.nom) }}
                    </td>
                </tr>
                <tr>
                    <td>
                        {{ form_label(e.type) }}
                    </td>
                    <td>
                        {{ form_errors(e.type) }}
                        {{ form_widget(e.type) }}
                    </td>
                </tr>
                <tr>
                    <td>
                        {{ form_label(e.adresse) }}
                    </td>
                    <td>
                        {{ form_errors(e.adresse) }}
                        {{ form_widget(e.adresse) }}
                    </td>
                </tr>
                <tr>
                    <td>
                        {{ form_label(e.description) }}
                    </td>
                    <td>
                        {{ form_errors(e.description) }}
                        {{ form_widget(e.description) }}
                    </td>
                </tr>
                <tr>
                    <td>
                        {{ form_label(e.horaire) }}
                    </td>
                    <td>
                        {{ form_errors(e.horaire) }}
                        {{ form_widget(e.horaire) }}
                    </td>
                </tr>
                <tr>
                    <td>

                    </td>
                    <td hidden id="TypeLoisirs">
                        {{ form_errors(e.typeLoisirs) }}
                        {{ form_widget(e.typeLoisirs) }}
                    </td>
                </tr>
                <tr>
                    <td>

                    </td>
                    <td>
                        {{ form_row(e.Ajouter, {'label':'Ajouter Etablissement','attr':{'class':'default_btn'}}) }}
                    </td>
                </tr>
                <tr>
                    <td>

                    </td>
                    <td>
                        {{ form_end(e) }}
                    </td>
                </tr>
            </table>
    </div>
    </div>
    </div>
    </section>
{% endblock %}

{% block JQuery %}
<script src="{{ asset( "bundles/main/js/vendor/jquery-3.2.1.min.js" )}}"></script>
<script>
    $(function() {
        if ($("#mainbundle_etablissement_type option:selected").text()==="Autres Etablissements")
        {
            $("#TypeLoisirs").show();
        }
    });
</script>
{% endblock %}