                                    <h3><a style="color: #303133" href="{{ path('profile_offre_user',{'id':offres.id}) }}">{{offres.offre }}</a></h3>
                                    <p style="font-weight: bold">Date d√©but: {{offres.dateDebut|date("m/d/Y")  }}</p>
                                    <p style="font-weight: bold">Date fin: {{offres.dateFin|date("m/d/Y")  }}</p>
