{% extends 'baseAdmin.html.twig' %}

{% block Afficher_Etablissement_ParId %}
<section id="main-content" xmlns="http://www.w3.org/1999/html">
    <section class="wrapper">
        <!-- page start-->
        <div class="row">
            <aside class="profile-nav col-lg-3">
                <section class="panel">
                    <div class="user-heading round">
                        <a href="#">
                            <img src="{{ asset('img/' ~ etab.imagePrincipale) }}" alt="">
                        </a>
                        <h1><strong>{{ etab.nom }}</strong></h1>
                    </div>

                    <ul class="nav nav-pills nav-stacked">
                        {% if is_granted("ROLE_REPRESENTANT") %}
                        <li><a href="{{ path('Modifier_Etablissement_Photo_Admin',{'id':etab.id}) }}"> <i class="fa fa-picture-o"></i> Changer La Photo </a></li>
                        {% endif %}
                        <li class="active"><a href="javascript:history.go(0)"> <i class="fa fa-building-o"></i> Page </a></li>
                        <li><a href="profile-activity.html"> <i class="fa fa-calendar"></i> Evenements </a></li>
                        {% if is_granted("ROLE_REPRESENTANT") %}
                        <li><a href="{{ path('Modifier_Etablissement_Admin',{'id':etab.id}) }}"><i class="fa fa-edit"></i> Modifier La Page </a></li>
                        {% endif %}
                    </ul>
                </section>
            </aside>

            <aside class="profile-info col-lg-9">
                <section class="panel">

                    <div class="panel-body bio-graph-info">
                        <div class="row">
                            <div class="bio-row">
                                <p><span><strong>Type </strong></span>: {{ etab.type }}</p>
                            </div>
                            <div class="bio-row">
                                <p><span><strong><i class="fa fa-home"></i> Adresse </strong></span>: {{ etab.adresse }}</p>
                            </div>
                            <div class="bio-row">
                                <p><span><strong><i class="fa fa-clock-o"></i> Horaire </strong></span>: {{ etab.horaireOuverture | date('H:i') }}-{{ etab.horaireFermeture | date('H:i') }}</p>
                            </div>
                            <div class="bio-row">
                                <p><span><strong><i class="fa fa-phone"></i> Num√©ro </strong></span>: {{ etab.numTel }}</p>
                            </div>
                            <div class="bio-row">
                                <p><span><strong><i class="fa fa-globe"></i> Site Web</strong></span>: <a href="{{ etab.url }}">{{ etab.url }}</a></p>
                            </div>
                            <div class="bio-row">
                                <p><span><strong><i class="fa fa-money"></i> Budget </strong></span>: {{ etab.budgetmoyen }} DT</p>
                            </div>
                        </div>
                        <div class="bio-graph-heading" id="ABCD">
                            <p><span><strong>Description : </strong></span>{{ etab.description }}</p>
                        </div>
                    </div>
                </section>
            </aside>
        </div>
        <!-- page end-->
    </section>
</section>

{% endblock %}

