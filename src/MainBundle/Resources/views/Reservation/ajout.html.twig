{% extends "::base.html.twig" %}

{% block AjouterReservation %}
<h1>Welcome to the Reservation:Ajout page</h1>
    <section id="reservation" class="bd-bottom reservation_section">
        <div class="container padding">
            <div class="col-sm-8">
                <div class="reserv_form">
                    <div class="section_heading mb-40">
                        <h2>Make online reservation</h2>
                        <p>Lorem Ipsum is simply dummy text of the printing and typesetting industry.<br>It has survived not only five centuries.</p>
                    </div>
                    <form action="http://wowthemez.com/templates/hangout/reg.php" method="post" id="reserv_form" class="form-horizontal">
                        <div class="form-group">
                            <div class="col-xs-6">
                                <input type="text" id="res_name" name="name" class="form-control" placeholder="Name" required>
                            </div>
                            <div class="col-xs-6">
                                <input type="email" id="res_email" name="email" class="form-control" placeholder="Your Email" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-6">
                                <input type="text" id="res_phone" name="phone" class="form-control" placeholder="Your Phone No" required>
                            </div>
                            <div class="col-xs-6">
                                <select class="form-control" id="quantity" name="quantity">
                                    <option>1 Person</option>
                                    <option>2 Person</option>
                                    <option>3 Person</option>
                                    <option>4 Person</option>
                                    <option>5 Person</option>
                                    <option>6 Person</option>
                                </select>
                            </div>
                        </div>
                        <button id="res_submit" class="default_btn" type="submit">Reserve Table</button>
                        <div id="msg-status" class="alert" role="alert"></div>
                    </form>
                </div>
            </div>
            <div class="col-sm-4 hidden-xs">
                <div class="reservation_img">
                    <img src="img/reservation.jpg" alt="reservation">
                </div>
            </div>
        </div>
    </section><!-- /.reservation_section -->
{% endblock %}
