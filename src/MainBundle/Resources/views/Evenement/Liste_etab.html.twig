
{% extends 'Base.html.twig' %}
{% block ListEvent %}
    <section id="reservation" class="reservation_section bg-grey">
        <div class="container padding">
            <div class="col-sm-10 col-sm-offset-1 align-left">
                <div class="reserv_form">
                    <div class="section_heading mb-40">
                        <h2>Les évenements de {{ etab.nom }}</h2>
                        <br>

                            {% for events in e %}
                                <div class="col-sm-3 col-xs-6 xs-padding">
                                    <div class="food_content align-center">
                                        <h3><a style="color: #303133" href="{{ path('profile_event_user',{'id_event':events.id}) }}">{{ events.nom }}</a></h3>
                                        <p style="font-weight: bold">Date: {{events.date|date("m/d/Y")  }}</p>
                                        <p style="font-weight: bold">Personnes qui vont participer: {{events.nbr_personnes  }}</p>
                                        <p style="font-weight: bold">Personnes intéressées: {{events.interesses }}</p>
                                    </div>
                                </div>
                            {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}